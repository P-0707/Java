//1. Scanner Class

import java.util.Scanner;

public class ScannerInputExample {
  public static void main(String args[]) {
    Scanner sc = new Scanner(System.in);

    //prompt and read the name
    System.out.print("Enter your name:  ");
    String name = sc.nextLine();

    //prompt and read the age
    System.out.print("Enter your age:  ");
    int age = sc.nextInt();

    //newline character
    sc.nextLine();

    sc.close();

    //display user name and age
    System.out.println( "NAME: " + name );
    System.out.println( "AGE: " + age );
  }
}


//2.  BufferedReader Class

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;

public class BufferedReaderExample {
  public static void main(String args[]) {
    BufferedReader br = new BufferedReader(new InputStreamReader(System.in));

    System.out.println("Enter your name: ");
    String name = br.readLine();

    br.close();

    System.out.println("Name: " +name);
  }
}

//3.  Console class

import java.io.Console;

public class ConsoleInputExample {
  public static void main(String args[]) {
    Console cl = System.console();

    char[] passwordArray = cl.readPassword("Enter password");
    String password = new String(passwordArray);

    System.out.println("Password: " +password);
  }
}


//4. JOptionPane

import java.swing.JOptionPane;

public class JOptionPaneInputExample {
  public static void main(String args[]) {
    String name = JOptionPane.showInputDialog("Enter your name: ");

    JOptionPane.showMessageDialog(null, "Name: " +name);

    System.exit(0);
  }
}


//5. Command-Line arguments

public class CommandLineArgumentsInputExample {
  public static void main(String args[]) {
    String name = args[0];
    int age = Integer.parseInt(args[1]);

    System.out.println("Name: " +name);
    System.out.println("age: " +age);
  }
}


